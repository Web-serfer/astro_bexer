---
export interface Props {
  images: { src: string; alt?: string }[];
}

const { images } = Astro.props;
---

<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3 my-5">
  {images.map((image) => (
    <div class="text-center">
      <img
        src={image.src}
        alt={image.alt}
        class="mx-auto w-45 h-45 object-contain rounded shadow my-1"
      />
      <div class="mt-1 text-sm text-gray-700">{image.alt}</div>
    </div>
  ))}
</div>

